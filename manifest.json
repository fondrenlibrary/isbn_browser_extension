{
  "manifest_version": 3,
  "name": "Primo Catalog Search",
  "description": "A Chrome extension to search Ex Libris Primo catalog with selected text",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}

